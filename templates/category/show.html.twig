{% extends 'base.html.twig' %} {% block title %}Les catégories {% endblock %} {%
block body %}
<div class="container">
  <h1 class="text-center my-5">
    Toutes les séries de la catégorie {{ category.name }}
  </h1>
  <table class="table table-striped">
    <tr class="text-center">
      <th>ID</th>
      <th>Title</th>
      <th>Résumé</th>
      <th>Action</th>
    </tr>
    {% for program in programs %}
    <tr>
      <td>
        {{ program.id }}
      </td>
      <td>
        {{ program.title }}
      </td>
      
	  <td>
		<a class="btn btn-outline-secondary" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
	  </td>
    </tr>
    {% else %}
    <tr>
      <td class="text-center" colspan="3">Aucune série trouvée.</td>
    </tr>
    {% endfor %}
  </table>
</div>
{% endblock %}