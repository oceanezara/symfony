{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

    <div class="container">
  <h1 class="text-center my-5">
    Toutes les saisons de la série {{ program.title }}
  </h1>
  <table class="table table-striped">
    <tr class="text-center">
      <th>Saison</th>
      <th>Résumé</th>
      <th>Année de sortie</th>
      <th>Fiche</th>
    </tr>
    {% for season in seasons %}
    <tr>
      <td>
        {{ season.number }}
      </td>
      <td>
        {{ season.description }}
      </td>
      <td>
        {{ season.year }}
      </td>
       <td>
			<a href="{{ path('program_season_show', { programId:program.id, seasonId:season.id } ) }}" class="btn btn-outline-secondary">Détails</a>
	   </td>
      
    </tr>
     
    {% else %}
    <tr>
      <td class="text-center" colspan="3">Aucune saison trouvée.</td>
    </tr>
    {% endfor %}
  </table>
</div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}